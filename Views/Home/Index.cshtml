@{
    ViewData["Title"] = "Garage Carr'auto - Mécanique automobile de tradition familiale";
}

<!-- Section Hero -->
<section class="hero-section">
    <div class="container">
        <div class="hero-content">
            <h1>Bienvenue chez Carr'auto</h1>
            <p class="lead">Un garage de confiance pour l'entretien et la réparation de vos véhicules depuis plus de 50 ans</p>
            <div class="hero-buttons">
                <a asp-controller="Devis" asp-action="Create" class="btn btn-primary">Demander un devis</a>
                <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-light">Nous contacter</a>
            </div>
        </div>
    </div>
</section>

<!-- Section Notre Histoire -->
<section class="history-section section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="section-title">Une Histoire de Famille</h2>
                <p>Depuis plusieurs générations, la famille Carro a bâti sa réputation sur des valeurs solides : qualité, honnêteté et passion pour la mécanique automobile.</p>
                <p>José Carro poursuit aujourd'hui cette tradition en alliant savoir-faire artisanal et techniques modernes.</p>
                <a asp-controller="Home" asp-action="Histoire" class="btn btn-outline-primary">Découvrir notre histoire</a>
            </div>
            <div class="col-md-6">
                <img src="/images/home/Garage.jpeg" alt="Atelier du garage Carr'auto" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</section>

<!-- Section Services -->
<section class="services-section section-padding bg-light">
    <div class="container">
        <h2 class="section-title text-center mb-5">Nos Services</h2>
        <div class="row">
            @if (ViewBag.Services != null && ViewBag.Services.Count > 0)
            {
                foreach (var service in ViewBag.Services)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card service-card h-100">
                            @if (!string.IsNullOrEmpty(service.ImageUrl))
                            {
                                <img src="@service.ImageUrl" class="card-img-top" alt="@service.Nom">
                            }
                            else
                            {
                                <img src="/images/service-default.jpg" class="card-img-top" alt="@service.Nom">
                            }
                            <div class="card-body">
                                <h5 class="card-title">@service.Nom</h5>
                                <p class="card-text">@service.Description</p>
                            </div>
                            <div class="card-footer bg-transparent border-0">
                                <a asp-controller="Services" asp-action="Details" asp-route-id="@service.Id" class="btn btn-sm btn-primary">En savoir plus</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>Nos services seront bientôt disponibles.</p>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-controller="Services" asp-action="Index" class="btn btn-primary">Voir tous nos services</a>
        </div>
    </div>
</section>

<!-- Section Véhicules d'occasion -->
<section class="vehicles-section section-padding">
    <div class="container">
        <h2 class="section-title text-center mb-5">Nos Véhicules d'Occasion</h2>
        <div class="row">
            @if (ViewBag.DerniersVehicules != null && ViewBag.DerniersVehicules.Count > 0)
            {
                foreach (var vehicule in ViewBag.DerniersVehicules)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card vehicle-card h-100">
                            @if (!string.IsNullOrEmpty(vehicule.ImageUrl))
                            {
                                <img src="@vehicule.ImageUrl" class="card-img-top" alt="@vehicule.Marque @vehicule.Modele">
                            }
                            else
                            {
                                <img src="/images/car-default.jpg" class="card-img-top" alt="@vehicule.Marque @vehicule.Modele">
                            }
                            <div class="card-body">
                                <h5 class="card-title">@vehicule.Marque @vehicule.Modele</h5>
                                <p class="card-text">
                                    <strong>Année:</strong> @vehicule.Annee<br>
                                    <strong>Kilométrage:</strong> @vehicule.Kilometrage km<br>
                                    <strong>Prix:</strong> @vehicule.Prix.ToString("C")
                                </p>
                            </div>
                            <div class="card-footer bg-transparent border-0">
                                <a asp-controller="VehiculeOccasion" asp-action="Details" asp-route-id="@vehicule.Id" class="btn btn-sm btn-primary">Voir détails</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>Nos véhicules d'occasion seront bientôt disponibles.</p>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-controller="VehiculeOccasion" asp-action="Index" class="btn btn-primary">Voir tous nos véhicules</a>
        </div>
    </div>
</section>

<!-- Section Promotions -->
<section class="promotions-section section-padding bg-light">
    <div class="container">
        <h2 class="section-title text-center mb-5">Promotions en cours</h2>
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card promo-card">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="/images/vidange.jpg" class="img-fluid rounded-start" alt="Promotion vidange">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">Vidange à prix réduit</h5>
                                <p class="card-text">Profitez de notre offre spéciale sur les vidanges complètes avec filtre inclus.</p>
                                <p class="promo-price"><span class="old-price">89,99 $</span> <span class="new-price">69,99 $</span></p>
                                <a asp-controller="Home" asp-action="Contact" class="btn btn-sm btn-primary">Prendre rendez-vous</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card promo-card">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="/images/pneus.jpg" class="img-fluid rounded-start" alt="Promotion pneus">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">Offre sur les pneus</h5>
                                <p class="card-text">Achetez 3 pneus et recevez le 4ème à moitié prix sur une sélection de marques.</p>
                                <a asp-controller="Services" asp-action="Index" class="btn btn-sm btn-primary">En profiter</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

